# google theme for i3wm by lasers

# Colors obtained from https://en.wikipedia.org/wiki/File:Logo_2013_Google.png

# i3-status
color_bad = "#D8442E"
color_degraded = "#FFC609"
color_good = "#009C58"
color_separator = "#2D76F6"

# $i3-theme-window
# google
set $blue #2D76F6
set $darkg #2D2D2D
set $green #009C58
set $lightg #bbbbbb
set $red #D8442E
set $white #ffffff
set $yellow #FFC609

# $i3-background
exec_always --no-startup-id xsetroot -solid '#2b2b2b'

# <clientclass>			<border> <bg> <text> <indicator>
client.focused          $blue $blue $white $red
client.focused_inactive $lightg $lightg $white $green
client.unfocused        $darkg $darkg $white $lightg
client.urgent 			$yellow $yellow $white $red

# $i3-theme-bar
colors {
    # <bar>
    background $darkg 
    separator $white
    statusline $white
    
    # <workclass>      <border> <bg> <text>
    focused_workspace 	$darkg $darkg $white
    active_workspace 	$darkg $darkg $lightg
    inactive_workspace	$darkg $darkg $lightg
    urgent_workspace 	$yellow $yellow $white
}